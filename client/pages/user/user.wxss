.user-info {
  position: relative;
  width: 100%;
  height: 356rpx;
  background: #fff;
  margin-top: 28rpx;
}

.custom-settings {
  position: absolute;
  top: 0;
  right: 60rpx;
}

.user-image-content {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.user-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: green;
  border: 1px solid rgb(255, 177, 26);
}

.user-level {
  position: absolute;
  width: 72rpx;
  height: 72rpx;
  bottom: -18rpx;
  right: -18rpx;
  border-radius: 44rpx;
  background: rgb(255, 177, 26);
  text-align: center;
  line-height: 72rpx;
  border: 8rpx solid #fff;
}

.user-name {
  display: block;
  margin: 40rpx auto 0;
  color: #9b99a9;
  text-align: center;
}

.content-container {
	width: 100%;
	padding: 20rpx 20rpx 0;
	box-sizing: border-box;
}

.content-filter {
  display: inline-block;
  width: 50%;
  height: 92rpx;
  background: #fff;
  text-align: center;
  line-height: 92rpx;
  color: #9b99a9;
  border-bottom: 1px solid rgb(221, 221, 221);
}
