/* pages/animal-detail/detail-page.wxss */

page {
  width: 100%;
  height: 100%;
}

.detail-view {
  width: 100%;
  height: 100%;
  background: rgb(255, 230, 185);
}

.logs {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
}

.logs:nth-child(2) {
  margin-top: 40rpx;
}

.logs:nth-child(3) {
  margin-top: 80rpx;
}

.detail-pages {
  position: relative;
  width: 100%;
  height: calc(100% - 220rpx);
}

.page {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition-duration: 700ms;
  z-index: 1;
}

.page.active {
  opacity: 1;
  z-index: 5;
}

.detail-image {
  position: absolute;
  width: 90%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.video-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 64rpx;
  height: 64rpx;
  cursor: pointer;
}

.video-content {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
}

.video-content>video {
  position: relative;
  width: 100%;
  height: 100%;
}

.turntable {
  position: fixed;
  bottom: -450rpx;
  left: 40rpx;
  width: 670rpx;
  height: 670rpx;
  border-radius: 335rpx;
  transition-duration: 700ms;
  z-index: 2;
}

.video-cover {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
}

.video-close {
  width: 100%;
  height: 100%;
}

.buttons {
  position: relative;
  width: 100%;
}

.button {
  position: absolute;
  width: 46rpx;
  height: 46rpx;
}

.question-pop {
  position: absolute;
  display: inline-block;
  top: 50%;
  left: 50%;
  width: 558rpx;
  height: auto;
  background: #fff;
  border-radius: 80rpx;
  transform: translate(-50%, -50%);
}

.pop-text {
  display: block;
  width: 490rpx;
  max-height: 420rpx;
  margin: 80rpx auto 180rpx;
  font-size: 40rpx;
  line-height: 60rpx;
  overflow-y: scroll;
  color: rgb(255, 122, 75);
}

.pop-know {
  position: fixed;
  bottom: 48rpx;
  left: 90rpx;
  width: 398rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  background: rgb(90, 201, 255);
  font-size: 36rpx;
  text-align: center;
  color: #fff;
}

.pop-close {
  position: absolute;
  top: -28rpx;
  right: -28rpx;
  width: 100rpx;
  height: 100rpx;
}

.food-container {
  width: 604rpx;
  margin: 72rpx 72rpx 0;
}

.question {
	position: relative;
  width: 604rpx;
  height: 224rpx;
  margin-bottom: 36rpx;
  border-radius: 10rpx;
}

.question-bg {
	position: absolute;
	top: -10rpx;
	left: -20rpx;
	width: 644rpx;
  height: 264rpx;
	z-index: -10;
}

.answer {
  /* display: inline-block; */
	position: relative;
  float: left;
  width: 170rpx;
  height: 224rpx;
}

.answer image {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
  max-width: 72rpx;
  max-height: 72rpx;
	margin: auto;
}

.choice-list {
  /* display: inline-block; */
  float: left;
  width: 434rpx;
  height: 224rpx;
  padding: 33rpx 73rpx 0 73rpx;
  box-sizing: border-box;
}

.choice {
  display: inline-block;
  float: left;
  width: 128rpx;
  height: 128rpx;
}

.choice:nth-child(1) {
  margin-right: 32rpx;
}

.choice .bg {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  z-index: -1;
}

.choice .choice-image {
  max-width: 72rpx;
  max-height: 72rpx;
  margin: 28rpx;
  z-index: 10;
}

.choice text {
	display: inline-block;
  width: 128rpx;
  height: 30rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  margin-top: 18rpx;
}
