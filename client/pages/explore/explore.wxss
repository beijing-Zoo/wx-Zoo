page {
  width: 100%;
  height: 100%;
  background-color: rgb(221, 221, 221);
}

.explore {
  width: 100%;
  height: 100%;
}

.explore-title {
  display: inline-block;
  font-size: 48rpx;
  margin-top: 20rpx;
  color: #9b99a9;
}

.search {
  width: 670rpx;
  height: 64rpx;
  margin-top: 24rpx;
  border: 1rpx solid rgb(164, 169, 179);
  border-radius: 32rpx;
  text-align: center;
}

.explore-list {
  width: 670rpx;
  margin: 20px auto 0;
}

.explore-types:nth-child(1) {
  background: rgb(255, 72, 88);
}

.explore-types:nth-child(2) {
  background: rgb(255, 211, 21);
}

.explore-types:nth-child(3) {
  background: rgb(7, 227, 171);
}

.explore-typest:nth-child(4) {
  background: rgb(0, 196, 255);
}

.explore-types:nth-child(5) {
  background: rgb(170, 115, 255);
}

.explore-types {
  margin: 10px auto 0;
  width: 100%;
  border-radius: 8rpx;
  background: #fff;
}

.explore-types text {
  height: 200rpx;
  padding-left: 49rpx;
  color: #fff;
  font-size: 56rpx;
  line-height: 200rpx;
}

.explore-map {
  position: relative;
  width: 100%;
  height: 100%;
}

.user {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.circle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
  height: 400rpx;
  border-radius: 200rpx;
  background: rgba(245, 166, 35, 0.3);
}

.go-content {
  position: absolute;
  bottom: 96rpx;
  left: 3%;
  width: 94%;
  height: 220rpx;
  background: #fff;
  border-radius: 8px;
}

.go-animal-icon {
  display: inline-block;
  width: 146rpx;
  height: 146rpx;
  margin: 30rpx 48rpx 0;
  vertical-align: top;
}

.animal-detailed {
  position: relative;
  display: inline-block;
  width: 416rpx;
  margin: 24rpx 32rpx 24rpx 16rpx;
}

.animal-name {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 16rpx;
  color: rgb(255, 128, 34);
}

.animal-range {
  margin-bottom: 36rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: rgb(155, 153, 169);
}

.animal-go {
  position: relative;
  display: inline-block;
  height: 46rpx;
	padding-right: 72rpx; 
  font-size: 28rpx;
  line-height: 46rpx;
  margin-bottom: 16rpx;
  margin-left: 160rpx;
  color: rgb(255, 128, 34);
}

.animal-go-icon {
  position: absolute;
  width: 60rpx;
  height: 46rpx;
  top: 0;
  right: 0;
}

.animal-go-touch-content {
  position: absolute;
  bottom: -20rpx;
	left: 50%;
  width: 134rpx;
  height: 224rpx;
	transform: translate(-50%, 0);
}

.animal-go-touch {
  width: 134rpx;
  height: 224rpx;
}
